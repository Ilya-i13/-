1	#pragma warning(disable : 4996)  // отключение ошибки c4996
2	#include <stdio.h>                         // необходимо для коррктного вызова
3				                   // функций ввода\вывода
4	int main(void)	     		       // главная функция main не принимает
5			                   	       // данных от операционной системы,
6				     	       // возвращает статус завершения
7	{          // начало тела программы
8		// описание переменных
9		float V;    	// объём бассейна
10		float U1;  	// скорость вытекания
11		float U2;   	// скорость поступания
12		float t;    	// искомое время опустошения бассейна
13		// ввод исходных данных
14		printf("V =");            		// вывод на экран подсказки: V =
15			scanf("%f", &V);   	// ввод с клавиатуры значение переменной V
16		printf("U1 =");           		// вывод на экран подсказки U1 =
17			scanf("%f", &U1);  	// ввод с клавиатуры значение переменной U1
18		printf("U2 =");           		// вывод на экран подсказки U2 =
19			scanf("%f", &U2);  	// ввод с клавиатуры значение переменной U2
20		// решение задачи
21		t = V / (U1 - U2);        // вычисление искомого времени опустошения
22					// вывод результатов
23		printf("time = %f\n", t); // вывод на экран
24					   // значений переменной t
25		// программа возвращается 
26		// признак корректного завершения
27		return 0;
28	}	// конец тела программы
